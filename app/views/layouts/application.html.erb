<!DOCTYPE html>
<html>
  <head>
  <title>PoteShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
    <div class="header-inner">
    <div class="header-left-nav">
        <a href="/"><img alt="サイトのロゴ画像" src="/assets/logo.png" /></a>
        <form action="https://presite-potepancamp-rails-02.herokuapp.com/rooms/search" accept-charset="UTF-8" method="get">
        <div class="header-sharch d-lg-inline-block d-none">
          <input type="text" name="area" id="area" value="" class="form-control" placeholder="エリア" />
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <div class="header-sharch d-lg-inline-block d-none">
          <input type="text" name="keyword" id="keyword" value="" class="form-control" placeholder="キーワード" />
          <i class="fas fa-search"></i>
        </div>
        <input type="submit" name="commit" value="" class="d-none" data-disable-with="" />
        </form>
        </div>
      <div class="header-right-nav">
          <div class="nav-item">
            <% if user_signed_in? %>
              <%= link_to "トップ", rooms_path %>
              <%= link_to '投稿画面へ', new_room_path%>
              <%= link_to "アカウント編集", edit_user_registration_path %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data:{ comfirm:"ログアウトしますか"} %>
            <% else %>
              <%= link_to "ログイン", new_user_session_path %>
              <%= link_to "アカウント登録", new_user_registration_path %>
            <% end %>
          </div>
      </div>
  </div>
</header>
  <body>
    <!-- ***** 以下を追加 ***** -->
    <!-- ***** 以上を追加 ***** -->
    <%= yield %>
    <footer>
      <h1>Hello World!</h1>
    </footer>
  </body>
</html>
